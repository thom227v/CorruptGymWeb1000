@page
@model CorruptGymWeb1000.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Staff Management";
}

<h1>Staff Management</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff.First().First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.First().Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.First().Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.First().Role_Name)
            </th>
            <th>
                Center Access
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staff)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Center_Access_Staff)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>