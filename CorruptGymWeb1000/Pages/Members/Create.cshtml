@page
@model CorruptGymWeb1000.Pages.Members.CreateModel
@{
    ViewData["Title"] = "Create Member";
}

<h1>Create Member</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.First_Name" class="control-label">First Name</label>
                <input asp-for="Member.First_Name" class="form-control" />
                <span asp-validation-for="Member.First_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Last_Name" class="control-label">Last Name</label>
                <input asp-for="Member.Last_Name" class="form-control" />
                <span asp-validation-for="Member.Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label">Email</label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Membership_Type_Id" class="control-label">Membership Type ID</label>
                <input asp-for="Member.Membership_Type_Id" class="form-control" />
                <span asp-validation-for="Member.Membership_Type_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Center_Id" class="control-label">Center ID</label>
                <input asp-for="Member.Center_Id" class="form-control" />
                <span asp-validation-for="Member.Center_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Birthday" class="control-label">Birthday</label>
                <input asp-for="Member.Birthday" class="form-control" type="date" />
                <span asp-validation-for="Member.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}