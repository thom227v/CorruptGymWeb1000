@page
@model CorruptGymWeb1000.Pages.Members.EditModel
@{
    ViewData["Title"] = "Edit Member";
}

<h1>Edit Member</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info alert-dismissible" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h4>Member ID: @Model.Member?.Id</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.Id" />
            
            <div class="mb-3">
                <label asp-for="Member.First_Name" class="form-label">First Name</label>
                <input asp-for="Member.First_Name" class="form-control" />
                <span asp-validation-for="Member.First_Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Member.Last_Name" class="form-label">Last Name</label>
                <input asp-for="Member.Last_Name" class="form-control" />
                <span asp-validation-for="Member.Last_Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Member.Email" class="form-label">Email</label>
                <input asp-for="Member.Email" class="form-control" type="email" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="Member.Active" type="checkbox" />
                <label class="form-check-label" asp-for="Member.Active">
                    Active Member
                </label>
            </div>
            
            <div class="mb-3">
                <label asp-for="Member.Membership_Type_Id" class="form-label">Membership Type ID</label>
                <input asp-for="Member.Membership_Type_Id" class="form-control" type="number" min="1" />
                <span asp-validation-for="Member.Membership_Type_Id" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Member.Center_Id" class="form-label">Center ID</label>
                <input asp-for="Member.Center_Id" class="form-control" type="number" min="1" />
                <span asp-validation-for="Member.Center_Id" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Member.Birthday" class="form-label">Birthday</label>
                <input asp-for="Member.Birthday" class="form-control" type="date" />
                <span asp-validation-for="Member.Birthday" class="text-danger"></span>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <button type="submit" class="btn btn-primary me-md-2">Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    
    <!-- Debug info panel -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Debug Information</h5>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>Current Values:</strong><br/>
                    ID: @Model.Member?.Id<br/>
                    First Name: @Model.Member?.First_Name<br/>
                    Last Name: @Model.Member?.Last_Name<br/>
                    Email: @Model.Member?.Email<br/>
                    Active: @Model.Member?.Active<br/>
                    Membership Type: @Model.Member?.Membership_Type_Id<br/>
                    Center: @Model.Member?.Center_Id<br/>
                    Birthday: @Model.Member?.Birthday.ToString("yyyy-MM-dd")<br/>
                </small>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-outline-secondary">? Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}